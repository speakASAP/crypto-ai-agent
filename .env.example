# Crypto AI Agent Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control

# =============================================================================
# REQUIRED VARIABLES (Must be provided)
# =============================================================================

# Binance API credentials for cryptocurrency data access
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Telegram Bot credentials for notifications
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# OPTIONAL VARIABLES (Have default values if not provided)
# =============================================================================

# News API for sentiment analysis (optional)
NEWS_API_KEY=your_news_api_key_here

# Error handling and connection settings
MAX_ERRORS_PER_HOUR=10
MAX_CONNECTION_RETRIES=5
HTTP_TIMEOUT=10

# LSTM model configuration
LSTM_NEURONS=50
WINDOW=50
PREDICTION_CACHE_TIME=10
MAX_PRICE_HISTORY=200

# Cryptocurrency symbols to track (comma-separated)
SYMBOLS=

# Database configuration
DB_PATH=data/crypto_history.db

# News sentiment analysis
SENTIMENT_INFLUENCE_FACTOR=0.05
NEWS_ITEMS_COUNT=5

# UI Dashboard configuration
UI_PORT=8501
UI_HOST=0.0.0.0

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/crypto_agent.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Adaptive monitoring intervals
ADAPTIVE_INTERVALS=true
VOLATILITY_THRESHOLDS=0.5,1.0,3.0,5.0
MIN_CHECK_INTERVAL=2
MAX_CHECK_INTERVAL=60
VOLATILITY_WINDOW=20

# API URLs and endpoints
BINANCE_API_URL=https://api.binance.com/api/v3/ticker/price
CRYPTOPANIC_API_URL=https://cryptopanic.com/api/v1/posts/
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/USD

# Currency conversion settings
CURRENCY_CACHE_DURATION=1800
CURRENCY_FALLBACK_CZK=23.5
CURRENCY_FALLBACK_EUR=0.85

# News sources configuration
NEWS_SOURCES=https://www.coindesk.com/arc/outboundfeeds/rss/?outputType=xml,https://cointelegraph.com/rss,https://bitcoinmagazine.com/rss,https://cryptoslate.com/feed/,https://decrypt.co/feed

# =============================================================================
# NEXT.JS + FASTAPI VARIABLES
# =============================================================================

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/crypto_agent
POSTGRES_DB=crypto_agent
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# FastAPI Application Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
API_HOST=0.0.0.0
API_PORT=8000

# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Performance Configuration
MAX_CONNECTIONS=20
PRICE_CACHE_DURATION=60

# Database Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
