# Cache Configuration
CURRENCY_CACHE_DURATION=1800

# Additional configuration variables
HTTP_TIMEOUT=10

# API Configuration  
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# External API URLs
TELEGRAM_API_URL=https://api.telegram.org/bot

# Frontend Configuration
