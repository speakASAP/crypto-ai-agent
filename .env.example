# Crypto AI Agent Environment Variables

# Binance API Configuration
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_API_SECRET=your-binance-api-secret-here

# Telegram Bot Configuration
TELEGRAM_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# JWT Configuration for user authentication
JWT_SECRET=your-jwt-secret-here
SECRET_KEY=your-secret-key-here
NEXT_PUBLIC_WS_URL=ws://localhost:8000/

# Agent Configuration
WINDOW=50
PREDICTION_CACHE_TIME=10
MAX_PRICE_HISTORY=200

# Database Configuration
DB_PATH=data/crypto_history.db

# UI Configuration
UI_PORT=8501
UI_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/crypto_agent.log
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Default Symbols Configuration
SYMBOLS=

# API URLs Configuration
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/USD
BINANCE_API_URL=https://api.binance.com/api/v3/ticker/price
CRYPTOPANIC_API_URL=https://cryptopanic.com/api/v1/posts/

# News Sources Configuration
NEWS_SOURCES=https://www.coindesk.com/arc/outboundfeeds/rss/?outputType=xml,https://cointelegraph.com/rss,https://bitcoinmagazine.com/rss,https://cryptoslate.com/feed/,https://decrypt.co/feed

# Currency Fallback Rates
CURRENCY_FALLBACK_EUR=0.85
CURRENCY_FALLBACK_CZK=23.5

# Cache Configuration
CURRENCY_CACHE_DURATION=1800

# Additional configuration variables
HTTP_TIMEOUT=10
